<div class="page-header">
    <h1 class="page-title">Loan Details</h1>
    <div>
        <a href="/admin/loans" class="btn btn-secondary">Back to Loans</a>
    </div>
</div>

<div class="grid-container" style="display: grid; grid-template-columns: 2fr 1fr; gap: 1.5rem;">
    <!-- Loan Info -->
    <div class="card">
        <h3>Loan Information</h3>
        <table class="details-table">
            <tr>
                <th>Borrower:</th>
                <td><a href="/admin/members/<%= loan.borrower_id %>">View Profile</a></td>
            </tr>
            <tr>
                <th>Amount Requested:</th>
                <td>KSh <%= parseFloat(loan.requested_amount).toLocaleString() %>
                </td>
            </tr>
            <tr>
                <th>Amount Approved:</th>
                <td>
                    <% if (loan.approved_amount) { %>
                        KSh <%= parseFloat(loan.approved_amount).toLocaleString() %>
                            <% } else { %>
                                -
                                <% } %>
                </td>
            </tr>
            <tr>
                <th>Interest Rate:</th>
                <td>
                    <%= loan.interest_rate %>%
                </td>
            </tr>
            <tr>
                <th>Repayment Period:</th>
                <td>
                    <%= loan.repayment_months %> months
                </td>
            </tr>
            <tr>
                <th>Status:</th>
                <td>
                    <span
                        class="badge badge-<%= loan.status === 'active' ? 'success' : (loan.status === 'pending' ? 'warning' : 'secondary') %>">
                        <%= loan.status==='pending' && loan.approval_count !==undefined ? `Pending
                            ${loan.approval_count}/3` : loan.status %>
                    </span>
                </td>
            </tr>
            <tr>
                <th>Date Requested:</th>
                <td>
                    <%= new Date(loan.created_at).toLocaleDateString() %>
                </td>
            </tr>
        </table>

        <!-- Actions -->
        <% if (loan.status==='pending' ) { %>
            <div style="margin-top: 2rem; padding-top: 1rem; border-top: 1px solid #E5E7EB;">
                <h3>Admin Actions</h3>
                <div style="display: flex; gap: 1rem;">
                    <form action="/admin/loans/<%= loan.id %>/approve" method="POST">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <div class="form-group">
                            <label>Approved Amount</label>
                            <input type="number" name="approved_amount" value="<%= loan.requested_amount %>"
                                class="form-control" required>
                        </div>
                        <button type="button" class="btn btn-success" id="approveBtn">Approve Loan</button>
                    </form>

                    <form id="rejectForm" style="align-self: flex-end;">
                        <button type="button" class="btn btn-danger" id="rejectBtn">Reject Loan</button>
                    </form>
                </div>
            </div>
            <% } %>

                <% if (loan.status==='approved' ) { %>
                    <div style="margin-top: 2rem; padding-top: 1rem; border-top: 1px solid #E5E7EB;">
                        <h3>Funds Disbursement</h3>
                        <div class="alert alert-info" style="margin-bottom: 1rem;">
                            <strong>Status: Approved</strong><br>
                            This loan has been fully approved. You can now disburse the funds to the member.
                        </div>
                        <button type="button" class="btn btn-primary" id="disburseBtn" style="width: 100%;">
                            Disburse Funds (KSh <%= parseFloat(loan.approved_amount).toLocaleString() %>)
                        </button>
                    </div>
                    <% } %>
    </div>

    <!-- Guarantors -->
    <div class="card">
        <h3>Guarantors</h3>
        <% if (guarantors && guarantors.length> 0) { %>
            <ul class="list-group">
                <% guarantors.forEach(g=> { %>
                    <li class="list-group-item">
                        <div>
                            <strong>
                                <%= g.guarantor_name %>
                            </strong>
                            <div class="text-sm text-muted">Pledged: <%= g.shares_pledged %> shares</div>
                        </div>
                        <span
                            class="badge badge-<%= g.status === 'accepted' ? 'success' : (g.status === 'pending' ? 'warning' : 'danger') %>">
                            <%= g.status %>
                        </span>
                    </li>
                    <% }); %>
            </ul>
            <% } else { %>
                <p>No guarantors listed.</p>
                <% } %>
    </div>
</div>

<!-- Repayment Schedule -->
<div class="card" style="margin-top: 1.5rem;">
    <h3>Repayment Schedule</h3>
    <% if (schedule && schedule.schedule) { %>
        <div style="margin-bottom: 1rem; padding: 1rem; background: #F9FAFB; border-radius: 4px;">
            <div style="display: grid; grid-template-columns: repeat(2, 1fr); gap: 1rem;">
                <div>
                    <strong>Total Amount:</strong> KSh <%= schedule.totalAmount %>
                </div>
                <div>
                    <strong>Total Interest:</strong> KSh <%= schedule.totalInterest %>
                </div>
            </div>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>Month</th>
                    <th>Principal</th>
                    <th>Interest</th>
                    <th>Monthly Payment</th>
                </tr>
            </thead>
            <tbody>
                <% schedule.schedule.forEach(item=> { %>
                    <tr>
                        <td>
                            <%= item.month %>
                        </td>
                        <td>KSh <%= item.principal %>
                        </td>
                        <td>KSh <%= item.interest %>
                        </td>
                        <td>KSh <%= item.payment %>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
        <% } else { %>
            <p>Repayment schedule will be available once the loan is approved.</p>
            <% } %>
</div>

<!-- Reason Modal -->
<div id="reasonModal" class="modal-overlay" style="display: none;">
    <div class="modal-container">
        <div class="modal-header">
            <h3 id="reasonModalTitle">Enter Reason</h3>
            <button class="modal-close" id="closeReasonModal">&times;</button>
        </div>
        <div class="modal-body">
            <div class="form-group">
                <label for="reasonInput">Reason/Comment</label>
                <textarea id="reasonInput" rows="4" class="form-control" placeholder="Enter your reason or comment..."
                    required></textarea>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" id="cancelReason">Cancel</button>
            <button type="button" class="btn btn-primary" id="submitReason">Submit</button>
        </div>
    </div>
</div>

<!-- Success Modal -->
<div id="successModal" class="modal-overlay" style="display: none;">
    <div class="modal-container">
        <div class="modal-header">
            <h3 id="successModalTitle">Action Submitted</h3>
            <button class="modal-close" id="closeSuccessModal">&times;</button>
        </div>
        <div class="modal-body">
            <div style="text-align: center; padding: 2rem 0;">
                <div style="font-size: 4rem; margin-bottom: 1rem;">âœ“</div>
                <p id="successMessage" style="font-size: 1.125rem; margin-bottom: 1rem;"></p>
                <div id="actionDetails"
                    style="padding: 1rem; background: #F9FAFB; border-radius: 4px; text-align: left;"></div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-primary" id="closeSuccess">OK</button>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const approveBtn = document.getElementById('approveBtn');
        const rejectBtn = document.getElementById('rejectBtn');
        const reasonModal = document.getElementById('reasonModal');
        const successModal = document.getElementById('successModal');
        const reasonInput = document.getElementById('reasonInput');
        const reasonModalTitle = document.getElementById('reasonModalTitle');

        let currentAction = null;
        let approvedAmount = null;

        // Open reason modal for approve
        if (approveBtn) {
            approveBtn.addEventListener('click', function () {
                const amountInput = document.querySelector('input[name="approved_amount"]');
                approvedAmount = amountInput ? amountInput.value : '<%= loan.requested_amount %>';
                currentAction = 'approve';
                reasonModalTitle.textContent = 'Approve Loan - Enter Reason';
                reasonInput.value = '';
                reasonModal.style.display = 'flex';
            });
        }

        // Open reason modal for reject
        if (rejectBtn) {
            rejectBtn.addEventListener('click', function () {
                currentAction = 'reject';
                reasonModalTitle.textContent = 'Reject Loan - Enter Reason';
                reasonInput.value = '';
                reasonModal.style.display = 'flex';
            });
        }

        // Disburse handler
        const disburseBtn = document.getElementById('disburseBtn');
        if (disburseBtn) {
            disburseBtn.addEventListener('click', async function () {
                if (!confirm('Are you sure you want to disburse these funds? This action cannot be undone.')) {
                    return;
                }

                const btn = this;
                btn.disabled = true;
                btn.textContent = 'Processing...';

                try {
                    const response = await fetch('/admin/loans/<%= loan.id %>/disburse', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'X-CSRF-Token': '<%= csrfToken %>'
                        }
                    });

                    const data = await response.json();

                    if (data.success) {
                        showSuccessModal({
                            message: data.message,
                            executed: true,
                            action: { id: 'DISB-' + Date.now() } // Mock ID for display
                        }, 'disburse');
                    } else {
                        alert('Error: ' + (data.error || 'Failed to disburse funds'));
                        btn.disabled = false;
                        btn.textContent = 'Disburse Funds';
                    }
                } catch (error) {
                    console.error('Error:', error);
                    alert('An error occurred. Please try again.');
                    btn.disabled = false;
                    btn.textContent = 'Disburse Funds';
                }
            });
        }

        // Close reason modal
        document.getElementById('closeReasonModal').addEventListener('click', closeReasonModal);
        document.getElementById('cancelReason').addEventListener('click', closeReasonModal);

        function closeReasonModal() {
            reasonModal.style.display = 'none';
            reasonInput.value = '';
            currentAction = null;
        }

        // Submit reason and perform action
        document.getElementById('submitReason').addEventListener('click', async function () {
            const reason = reasonInput.value.trim();
            if (!reason) {
                alert('Please enter a reason');
                return;
            }

            const submitBtn = this;
            submitBtn.disabled = true;
            submitBtn.textContent = 'Submitting...';

            // Store the action type before any async operations
            const actionType = currentAction;

            try {
                const url = `/admin/loans/<%= loan.id %>/${actionType}`;
                const body = { reason };

                if (actionType === 'approve') {
                    body.approved_amount = approvedAmount;
                }

                const response = await fetch(url, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-CSRF-Token': '<%= csrfToken %>'
                    },
                    body: JSON.stringify(body)
                });

                const data = await response.json();

                if (data.success) {
                    closeReasonModal();
                    showSuccessModal(data, actionType);
                } else {
                    alert('Error: ' + (data.error || 'Failed to process action'));
                    submitBtn.disabled = false;
                    submitBtn.textContent = 'Submit';
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred. Please try again.');
                submitBtn.disabled = false;
                submitBtn.textContent = 'Submit';
            }
        });

        function showSuccessModal(data, actionType) {
            document.getElementById('successMessage').textContent = data.message;

            const actionLabel = actionType === 'approve' ? 'Approval' : 'Rejection';
            const detailsHtml = `
            <p style="margin-bottom: 0.5rem;"><strong>Action Type:</strong> ${actionLabel}</p>
            <p style="margin-bottom: 0.5rem;"><strong>Status:</strong> ${data.executed ? 'Executed' : 'Pending (Requires 2/3 admin approval)'}</p>
            <p style="margin-bottom: 0.5rem;"><strong>Action ID:</strong> ${data.action.id.substring(0, 8)}...</p>
            <p style="margin: 0;"><strong>Note:</strong> ${data.executed ? 'The action has been executed.' : 'Other admins will be notified to review this action.'}</p>
        `;

            document.getElementById('actionDetails').innerHTML = detailsHtml;
            successModal.style.display = 'flex';
        }

        // Close success modal
        document.getElementById('closeSuccessModal').addEventListener('click', closeSuccessModal);
        document.getElementById('closeSuccess').addEventListener('click', closeSuccessModal);

        function closeSuccessModal() {
            successModal.style.display = 'none';
            window.location.href = '/admin/loans';
        }

        // Close modals on outside click
        reasonModal.addEventListener('click', function (e) {
            if (e.target === this) closeReasonModal();
        });

        successModal.addEventListener('click', function (e) {
            if (e.target === this) closeSuccessModal();
        });
    });
</script>

