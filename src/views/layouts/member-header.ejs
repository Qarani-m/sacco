<!-- Notifications Modal -->
<div id="notificationsModal" class="modal-overlay">
    <div class="modal-content">
        <div class="modal-header">
            <h2 class="modal-title">Notifications</h2>
            <button class="modal-close" id="closeModalBtn">Ã—</button>
        </div>
        <div class="modal-body" id="notificationsBody">
            <div class="empty-state">
                <p>Loading notifications...</p>
            </div>
        </div>
    </div>
</div>

<script>
// Open modal when clicking notifications link
document.getElementById('notificationsLink').addEventListener('click', function(e) {
    e.preventDefault();
    const modal = document.getElementById('notificationsModal');
    modal.style.display = 'flex';
    loadNotifications();
});

// Close modal when clicking close button
document.getElementById('closeModalBtn').addEventListener('click', function() {
    const modal = document.getElementById('notificationsModal');
    modal.style.display = 'none';
});

// Close modal when clicking outside
document.getElementById('notificationsModal').addEventListener('click', function(e) {
    if (e.target === this) {
        const modal = document.getElementById('notificationsModal');
        modal.style.display = 'none';
    }
});

async function loadNotifications() {
    try {
        const response = await fetch('/members/notifications');
        const data = await response.json();
        
        const body = document.getElementById('notificationsBody');
        
        if (!data.success || !data.notifications || data.notifications.length === 0) {
            body.innerHTML = `
                <div class="empty-state">
                    <div style="font-size: 3rem; margin-bottom: 1rem;">ðŸ””</div>
                    <p style="margin: 0;">No notifications</p>
                </div>
            `;
            return;
        }
        
        body.innerHTML = data.notifications.map(n => `
            <div class="notification-item ${!n.is_read ? 'unread' : ''}" data-notification-id="${n.id}">
                <div class="notification-title">${escapeHtml(n.title)}</div>
                <div class="notification-message">${escapeHtml(n.message)}</div>
                <div class="notification-time">${formatDate(n.created_at)}</div>
            </div>
        `).join('');
        
        // Add click listeners to notification items using event delegation
        body.querySelectorAll('.notification-item').forEach(item => {
            item.addEventListener('click', function() {
                const notificationId = this.getAttribute('data-notification-id');
                markAsRead(notificationId);
            });
        });
        
        // Update badge
        const unreadCount = data.notifications.filter(n => !n.is_read).length;
        document.getElementById('notificationsBadge').textContent = unreadCount;
        
    } catch (error) {
        console.error('Error loading notifications:', error);
        document.getElementById('notificationsBody').innerHTML = `
            <div class="empty-state">
                <p style="color: #EF4444;">Failed to load notifications</p>
            </div>
        `;
    }
}

async function markAsRead(notificationId) {
    try {
        await fetch(`/members/notifications/${notificationId}/read`, {
            method: 'POST'
        });
        
        // Reload notifications
        loadNotifications();
    } catch (error) {
        console.error('Error marking notification as read:', error);
    }
}

function formatDate(dateString) {
    const date = new Date(dateString);
    const now = new Date();
    const diff = now - date;
    const minutes = Math.floor(diff / 60000);
    const hours = Math.floor(diff / 3600000);
    const days = Math.floor(diff / 86400000);
    
    if (minutes < 1) return 'Just now';
    if (minutes < 60) return `${minutes}m ago`;
    if (hours < 24) return `${hours}h ago`;
    if (days < 7) return `${days}d ago`;
    return date.toLocaleDateString();
}

function escapeHtml(text) {
    const div = document.createElement('div');
    div.textContent = text;
    return div.innerHTML;
}
</script>