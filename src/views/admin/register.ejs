<% title="Register" %>

    <div class="container-sm">

        <!-- Page Header -->
        <div class="page-header">
            <div class="accent-line"></div>
            <h1 class="page-title">Register New User</h1>
            <p class="page-subtitle">Create a new account and assign a role</p>
        </div>

        <!-- Registration Form -->
        <form id="registerForm" action="/admin/register" method="POST" class="space-y-6">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">

            <!-- Full Name -->
            <div class="form-group">
                <label for="full_name">Full Name</label>
                <input type="text" id="full_name" name="full_name" value="" required>
            </div>

            <!-- Email -->
            <div class="form-group">
                <label for="email">Email Address</label>
                <input type="email" id="email" name="email" value="" required>
            </div>

            <!-- Phone Number -->
            <div class="form-group">
                <label for="phone_number">Phone Number</label>
                <input type="tel" id="phone_number" name="phone_number" value="" placeholder="254XXXXXXXXX" required>
            </div>

            <!-- Role Selection -->
            <div class="form-group">
                <label for="role_id">Role</label>
                <select id="role_id" name="role_id" required style="width: 100%; padding: 0.75rem; border: 1px solid #D1D5DB; border-radius: 4px; font-size: 1rem; color: #111827; background: white;">
                    <option value="">-- Select a role --</option>
                    <% if (typeof roles !== 'undefined' && roles.length > 0) { %>
                        <% roles.forEach(role => { %>
                            <option value="<%= role.id %>"><%= role.name %><% if (role.description) { %> - <%= role.description %><% } %></option>
                        <% }); %>
                    <% } %>
                </select>
            </div>

            <!-- Password -->
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" value="" required>
            </div>

            <!-- Confirm Password -->
            <div class="form-group">
                <label for="confirm_password">Confirm Password</label>
                <input type="password" id="confirm_password" name="confirm_password" value="" required>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn-primary">
                Register User
            </button>

        </form>

        <!-- Links -->
        <div class="text-center mt-6">
            <a href="/admin/members" class="link-primary">Back to Members List</a>
        </div>

        <!-- Alerts -->
        <div id="errorMessage" class="hidden alert alert-error"></div>
        <div id="successMessage" class="hidden alert alert-success"></div>

        <!-- Footer -->
        <div class="page-footer">
            <p>SACCO Member Portal â€¢ 2026</p>
        </div>

    </div>

    <!-- Toast Container -->
    <div id="toast-container" class="toast-container"></div>

    <script src="/js/auth-register.js"></script>