<% title="Login" %>

    <div class="container-sm">

        <!-- Page Header -->
        <div class="page-header">
            <div class="accent-line"></div>
            <h1 class="page-title">SACCO Login</h1>
            <p class="page-subtitle">Access Your Account</p>
        </div>

        <!-- Login Form -->
        <form id="loginForm" action="/auth/login" method="POST" class="space-y-6">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">

            <!-- Email -->
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" value="admin@sacco.com" required>
            </div>

            <!-- Password -->
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" value="password1234!!A" required>
            </div>

            <!-- Login button -->
            <button type="submit" class="btn-primary">
                Login
            </button>

        </form>

        <!-- Links -->
        <div class="text-center mt-6">
            <p class="text-secondary mt-2">
                <a href="/auth/forgot-password" class="link-primary">Forgot Password?</a>
            </p>
        </div>

        <!-- Alerts -->
        <div id="errorMessage" class="hidden alert alert-error"></div>

        <!-- Footer -->
        <div class="page-footer">
            <p>SACCO Member Portal â€¢ 2026</p>
        </div>

    </div>

    <!-- Toast Container -->
    <div id="toast-container" class="toast-container"></div>