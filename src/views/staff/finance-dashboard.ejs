<div class="row mb-4">
    <div class="col-12">
        <h1 class="h3 mb-2 text-gray-800">Finance Dashboard</h1>
        <p class="mb-4">Financial overview and transaction management.</p>
    </div>
</div>

<div class="row">
    <div class="col-xl-4 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            Total Savings</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">KSh <%= (stats.total_savings ||
                                0).toLocaleString() %>
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-wallet fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-4 col-md-6 mb-4">
        <div class="card border-left-warning shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                            Active Loan Balance</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">KSh <%= (stats.active_loans_value ||
                                0).toLocaleString() %>
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-hand-holding-usd fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-4 col-md-6 mb-4">
        <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                            Total Transaction Volume</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">KSh <%= (stats.total_transactions_volume ||
                                0).toLocaleString() %>
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-exchange-alt fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Recent Transactions</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>User</th>
                        <th>Type</th>
                        <th>Amount</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <% recentTransactions.forEach(t=> { %>
                        <tr>
                            <td>
                                <%= new Date(t.created_at).toLocaleDateString() %>
                            </td>
                            <td>
                                <%= t.full_name || t.user_id %>
                            </td>
                            <td>
                                <%= t.type %>
                            </td>
                            <td>KSh <%= t.amount %>
                            </td>
                            <td>
                                <%= t.status %>
                            </td>
                        </tr>
                        <% }); %>
                            <% if (recentTransactions.length===0) { %>
                                <tr>
                                    <td colspan="5" class="text-center">No recent transactions</td>
                                </tr>
                                <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>